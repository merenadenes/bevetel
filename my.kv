WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:
    FifthWindow:
    SixthWindow:
    SeventhWindow:



<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        Button:
            text: 'Mai osszbevetel rogzitese'
            on_release:
                app.root.current = "Second"
                root.manager.transition.direction = "left"
        Button:
            text: "Mai bevetel bovitese"
            on_release:
                app.root.current = "Third"
                root.manager.transition.direction = "left"
        Button:
            text: "Adott honap bevetele"
            on_release:
                app.root.current = "Fourth"
                root.manager.transition.direction = "left"
        Button:
            text: "Adott nap bevetele"
            on_release:
                app.root.current = "Fifth"
                root.manager.transition.direction = "left"
        Button:
            text: "Mindenkori bevetel"
            on_release:
                root.osszbevetel()
        Button:
            text: "Bevetel modositasa egy adott napon"
            on_release:
                app.root.current = "Seventh"
                root.manager.transition.direction = "left"
        Button:
            text: "Biztonsagi mentes"
            on_release:
                root.biztonsagimentes()


<SecondWindow>:
    name: "Second"

    userinput: userinput

    GridLayout:
        cols:1

        Label:
            text: "Ird be az osszeget"

        TextInput:
            id: userinput
            multiline: False


        Button:
            text: "Vegelegesit"
            on_release:
                root.maiosszbevetel()
        Button:
            text: "Vissza"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

